	"version": "0.2.0",
	"configurations": [
		{
			"type": "cppvsdbg",
			"preLaunchTask": "${defaultBuildTask}",
			"request": "launch",
			"name": "Go",
			"program": "${workspaceFolder}/build/Debug/radiance.exe",
			"args": [
				"position startpos moves e2e4",
				"go",
			]
		},
		{
			"type": "cppvsdbg",
			"preLaunchTask": "${defaultBuildTask}",
			"request": "launch",
			"name": "Perft",
			"program": "${workspaceFolder}/build/Debug/radiance.exe",
			"args": [
				"go perft 1",
			]
		},
		{
			"type": "cppvsdbg",
			"preLaunchTask": "${defaultBuildTask}",
			"request": "launch",
			"name": "Bitboard test",
			"program": "${workspaceFolder}/build/Debug/bitboardMoves.exe"
		}
	]
}
